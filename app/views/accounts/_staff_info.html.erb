<div class="col-xl-4 col-lg-4 col-md-6 col-sm- border-item">
  <div class="single-team mb-30">
    <div class="team-img">
      <%= image_tag @account.display_image if @account.image.attached? %>
    </div>
    <div class="team-caption">

      <h3><%= @account.full_name %></h3>
      <table>
        <tr>
          <td><%= fa_icon("ambulance") %></td>
          <td><%= @account.license.major_name %></td>
        </tr>
        <tr>
          <td><%= fa_icon("graduation-cap") %></td>
          <td><%= @account.license.level %></td>
        </tr>
        <tr>
          <td><%= fa_icon("building") %></td>
          <td><%= @account.license.workspace %></td>
        </tr>
        <tr>
          <td><%= fa_icon("venus-mars") %></td>
          <td><%= @account.gender %></td>
        </tr>
        <tr>
          <td><%= fa_icon("birthday-cake") %></td>
          <td><%= l @account.date_of_birth, format: :short  %></td>
        </tr>
        <tr>
          <td><%= fa_icon("map-marker") %></td>
          <td><%= @account.address %></td>
        </tr>
        <tr>
          <td><%= fa_icon("envelope") %></td>
          <td><%= @account.email %></td>
        </tr>
        <tr>
          <td><%= fa_icon("phone") %></td>
          <td><%= @account.phone_number %></td>
        </tr>
      </table>
      <% if @account.reviews.size == 0%>
    <p><%= t "staff.no_review_yet" %></p>
      <% else %>
        <div class="rated">
          <% for i in 1..5 do %>
            <% if i <= @account.reviews.sum(:rate)/@account.reviews.size %>
              <%= render "shared/star_checked" %>
            <% else %>
              <%= render "shared/star_unchecked" %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="col-lg-8 col-md-12 border-item post-list">
  <%= render partial: "reviews/list_reviews", locals: {reviewable: @account} %>
</div>
