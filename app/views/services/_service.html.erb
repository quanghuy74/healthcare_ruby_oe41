<div class="col-12 col-md-4 area-service">
  <div class="card card-service">
    <%= image_tag service.image %>
    <div class="card-body">
      <h4 class="card-title"><%= service.name %></h4>
      <p class="card-text"><%= service.major_name %></p>
      <% if service.reviews.size == 0%>
        <p><%= t "staff.no_review_yet" %></p>
      <% else %>
        <div class="rated">
          <% for i in 1..5 do %>
            <% if i <= service.reviews.sum(:rate)/service.reviews.size %>
              <%= render "shared/star_checked" %>
            <% else %>
              <%= render "shared/star_unchecked" %>
            <% end %>
          <% end %>
        </div>
      <% end %>
      <%= link_to "See Profile", service, class:"btn btn-primary float-right" %>
    </div>
  </div>
</div>
